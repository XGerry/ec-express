doctype html
include mixins
html
	include includes/head
		title Manifest
	body
		#wrapper
			+sidebarNav("customs")

			#page-content
				nav.navbar.navbar-light.bg-light.navbar-expand-sm.sticky-top
					button.btn.btn-secondary.btn-toggles(type="button").m-0.position-relative#left-menu-toggle
						i.far.fa-bars.fa-fw
					span.navbar-brand.mb-0.h1.pl-3 Ship Date
					form.form-inline.pr-2
						input#shipDate(type="date").form-control
					span.navbar-text Last Modified: #[span#lastModified]
					ul.nav.navbar-nav.ml-auto
						button.btn.btn-outline-primary(type="button")#newOrderButton New Order
						li.dropdown.nav-item
							a.nav-link.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") Actions
							ul.dropdown-menu.dropdown-menu-right
								a#getOrdersButton(href="#").dropdown-item.btn Get Orders
								a#calculateTotals(href="#").dropdown-item Calculate Totals
								a#enterTotalsButton(href="#").dropdown-item Enter Totals
								a#removeDuplicatesButton(href="#").dropdown-item Remove Duplicates
								.dropdown-divider
								a#deleteManifest(href="#").dropdown-item.bg-danger.text-white Delete
						button.btn.btn-success.navbar-btn(type="button")#saveButton Save
				.container.pt-3
					.row
						.col-12
							h2 Summary
					.row
						.col-4
							h4 Total Parcels: #[span#totalParcels]
						.col-4
							h4 Total Weight: #[span#totalWeight]
						.col-4
							h4 Total Value: $#[span#totalValue]

				.container.hide-printer
					.row
						.col-12
							h2 Manifest
				
				.container.top-25#manifest

		+footer
		script(src="js/customs.js")
		script.
			loadManifest(!{JSON.stringify(manifest)});


	#orderModal.modal.fade(role="dialog")
		.modal-dialog.modal-lg
			.modal-content
				.modal-header
					h4#customerName Manifest Order
					button.close(data-dismiss="modal") &times;
				.modal-body
					.card
						.card-header
							a(data-toggle="collapse", data-target="#orderInfo").panel-title Order Info
						.card-body.collapse.show#orderInfo
							.form-group.row
								.col-3
									label Invoice Prefix
									input#invoicePrefix.form-control(type="text")
								.col-3
									label Invoice Number
									input#invoiceNumber.form-control(type="number")
								.col-3
									label Total Weight
									input#orderWeight.form-control(type="number")
								.col-3
									label Total Parcels
									input#orderParcels.form-control(type="number")
						.card-header 
							a(data-toggle="collapse", data-target="#shippingInfo").panel-title Shipping Address
						.card-body.collapse.show#shippingInfo
							.form-group.row
								.col-6
									label(for="addressSearch") Search
									.input-group
										input#addressSearch.form-control(type="text", list="addressList")
										.input-group-append
											button.btn.btn-primary(type="button")#applyAddressButton Apply
									datalist#addressList
									p#addressInfo
								.col-6
									label(for="companyName") Company
									input#companyName.form-control(type="text")
							.form-group.row
								.col-6
									label(for="customerFirstName") First Name
									input#customerFirstName.form-control(type="text")
								.col-6
									label(for="customerLastName") Last Name
									input#customerLastName.form-control(type="text")
							.form-group.row
								.col-4
									label(for="shippingAddress") Address
									input#shippingAddress.form-control(type="text")
								.col-4
									label(for="shippingAddress2") Address 2
									input#shippingAddress2.form-control(type="text")
								.col-4
									label(for="shippingCity") City
									input#shippingCity.form-control(type="text")
							.form-group.row
								.col-4
									label(for="shippingState") State
									input#shippingState.form-control(type="text")
								.col-4
									label(for="shippingCountry") Country
									input#shippingCountry.form-control(type="text")
								.col-4
									label(for="shippingZip") Zip/Postal Code
									input#shippingZip.form-control(type="text")

						.card-header.pb-2
							a(data-toggle="collapse" data-target="#itemDetails").d-inline-block.mb-0 Item Details
							button.btn.btn-sm.btn-secondary.float-right(type="button")#addHTCRowButton Add Row
						.card-body.collapse.show#itemDetails
							.row
								.col-3
									strong HTC Code
								.col-4
									strong Country of Origin
								.col-2
									strong Quantity
								.col-3
									strong Value
							#itemDetailModal

				.modal-footer
					button#doneEditingButton.btn.btn-success(type="button") Done

	#totalsModal.modal.fade(role="dialog")
		.modal-dialog
			.modal-content
				.modal-header
					h4 Totals
					button.close(data-dismiss="modal") &times;
				.modal-body
					.form-group.row
						.col-4
							label Total Parcels
							input#totalParcelsInput.form-control(type="number")
						.col-4
							label Total Weight
							input#totalWeightInput.form-control(type="number")
						.col-4
							label Total Value
							input#totalValueInput.form-control(type="number")
				.modal-footer
					button#doneTotalsButton.btn.btn-success(type="button") Done
mixin navbar(active)
	nav(class="navbar navbar-inverse navbar-fixed-top", style="z-index=2;")
			div(class="container")
				div(class="navbar-header")
					button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
						span(class="sr-only") Toggle navigation
						span(class="icon-bar")
						span(class="icon-bar")
						span(class="icon-bar")
					a(class="navbar-brand", href="/") EC-Express
				div(id="navbar", class="collapse navbar-collapse")
					ul(class="nav navbar-nav")
						if active == "home"
							li.active
								a(href="/") Home
						else
							li
								a(href="/") Home
						li.dropdown
							a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="fasle") Customs #[span.caret]
							ul.dropdown-menu
								if active == "customs"
									li.active
										a(href="/customs") New Manifest
								else
									li
										a(href="/customs") New Manifest
								if active == "list-manifest"
									li.active
										a(href="/list-manifests") List Manifests
								else
									li
										a(href="/list-manifests") List Manifests
						li.dropdown
							a.dropdown-toggle(href="#", data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") 3D Cart Tools #[span.caret]
							ul.dropdown-menu
								if active == "3dcart"
									li.active
										a(href="/3dcart") Item Manager
								else
									li
										a(href="/3dcart") Item Manager
								if active == "inventory"
									li.active
										a(href="/inventory") Inventory
